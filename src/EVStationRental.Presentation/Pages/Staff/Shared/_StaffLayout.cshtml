<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EV Station Rental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVStationRental.Presentation.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="app-header shadow-sm">
        <div class="app-header__inner">
            <a class="brand" asp-page="/Homepage/Home">
                <span class="brand__logo">⚡</span>
                <span class="brand__text">EV Staff Portal</span>
            </a>
            <div class="auth-actions">
                <span class="staff-identity">Xin chào, <strong>@(User.Identity?.Name ?? "Nhân viên")</strong></span>
                <a class="btn btn-outline btn-pill" asp-page="/Homepage/Home">Trang khách</a>
                <form method="post" asp-page="/Auth/Logout" class="d-inline-flex">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary btn-pill">Đăng xuất</button>
                </form>
            </div>
        </div>
    </header>

    <div class="app-shell app-shell--flush">
        <main class="app-main">
            <div class="admin-layout">
                <aside class="admin-sidebar">
                    <div>
                        <div class="admin-sidebar__title">EV Staff Portal</div>
                        <p class="admin-sidebar__meta">Quản lý vận hành, đội xe &amp; trạm sạc realtime.</p>
                    </div>
                    <nav class="admin-nav">
                        <a class="admin-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Staff/Dashboard/Index" ? "active" : string.Empty)"
                            asp-page="/Staff/Dashboard/Index">
                            <span class="admin-link__icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-speedometer2"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M8 4a.5.5 0 0 1 .5.5V6a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 8 4M3.732 5.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707M2 10a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 10m9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5m.754-4.246a.39.39 0 0 0-.527-.02L7.547 9.31a.91.91 0 1 0 1.302 1.258l3.434-4.297a.39.39 0 0 0-.029-.518z" />
                                    <path fill-rule="evenodd"
                                        d="M0 10a8 8 0 1 1 15.547 2.661c-.442 1.253-1.845 1.602-2.932 1.25C11.309 13.488 9.475 13 8 13c-1.474 0-3.31.488-4.615.911-1.087.352-2.49.003-2.932-1.25A8 8 0 0 1 0 10m8-7a7 7 0 0 0-6.603 9.329c.203.575.923.876 1.68.63C4.397 12.533 6.358 12 8 12s3.604.532 4.923.96c.757.245 1.477-.056 1.68-.631A7 7 0 0 0 8 3" />
                                </svg>
                            </span>
                            <span>Dashboard</span>
                        </a>
                        <a class="admin-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Orders") == true ? "active" : string.Empty)"
                            asp-page="/Staff/Orders/Index">
                            <span class="admin-link__icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cart-check"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0z" />
                                    <path
                                        d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zm3.915 10L3.102 4h10.796l-1.313 7zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                                </svg>
                            </span>
                            <span>Quản lý đơn hàng</span>
                        </a>
                        <a class="admin-link @((ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Vehicles") == true && ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("VehicleModels") != true) ? "active" : string.Empty)"
                            asp-page="/Staff/Vehicles/Index">
                            <span class="admin-link__icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-ev-front-fill"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M2.52 3.515A2.5 2.5 0 0 1 4.82 2h6.362c1 0 1.904.596 2.298 1.515l.792 1.848c.075.175.21.319.38.404.5.25.855.715.965 1.262l.335 1.679q.05.242.049.49v.413c0 .814-.39 1.543-1 1.997V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.338c-1.292.048-2.745.088-4 .088s-2.708-.04-4-.088V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.892c-.61-.454-1-1.183-1-1.997v-.413a2.5 2.5 0 0 1 .049-.49l.335-1.68c.11-.546.465-1.012.964-1.261a.8.8 0 0 0 .381-.404l.792-1.848ZM3 10a1 1 0 1 0 0-2 1 1 0 0 0 0 2m10 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2M6 8a1 1 0 0 0 0 2h4a1 1 0 1 0 0-2zM2.906 5.189a.51.51 0 0 0 .497.731c.91-.073 3.35-.17 4.597-.17s3.688.097 4.597.17a.51.51 0 0 0 .497-.731l-.956-1.913A.5.5 0 0 0 11.691 3H4.309a.5.5 0 0 0-.447.276L2.906 5.19Z" />
                                </svg>
                            </span>
                            <span>Quản lý xe</span>
                        </a>
                        <a class="admin-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/VehicleModels") == true ? "active" : string.Empty)"
                            asp-page="/Staff/VehicleModels/Index">
                            <span class="admin-link__icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-list-ul"
                                    viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                        d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
                                </svg>
                            </span>
                            <span>Quản lý mẫu xe</span>
                        </a>
                        <a class="admin-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Stations") == true ? "active" : string.Empty)"
                            asp-page="/Staff/Stations/Index">
                            <span class="admin-link__icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-pin-map-fill"
                                    viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                        d="M3.1 11.2a.5.5 0 0 1 .4-.2H6a.5.5 0 0 1 0 1H3.75L1.5 15h13l-2.25-3H10a.5.5 0 0 1 0-1h2.5a.5.5 0 0 1 .4.2l3 4a.5.5 0 0 1-.4.8H.5a.5.5 0 0 1-.4-.8z" />
                                    <path fill-rule="evenodd"
                                        d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999z" />
                                </svg>
                            </span>
                            <span>Quản lý trạm</span>
                        </a>
                    </nav>
                    <div class="admin-sidebar__footer">
                        <div class="wallet-chip w-100">
                            <span>Đăng nhập</span>
                            <strong>@(User.Identity?.Name ?? "Nhân viên")</strong>
                        </div>
                    </div>
                </aside>
                <section class="admin-content">
                    <div class="admin-content__header">
                        <div>
                            <p class="eyebrow text-muted mb-1">Không gian nhân viên</p>
                            <h2>@(ViewData["Title"] ?? "Staff Workspace")</h2>
                        </div>
                        <div class="d-flex flex-wrap gap-2">
                            <a class="btn btn-outline btn-pill" asp-page="/Homepage/Home">Xem trang khách</a>
                            <form method="post" asp-page="/Auth/Logout" class="d-inline-flex">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary btn-pill">Đăng xuất</button>
                            </form>
                        </div>
                    </div>
                    <div class="admin-content__inner">
                        @RenderBody()
                    </div>
                </section>
            </div>
        </main>
    </div>

    <footer class="app-footer">
        <div class="app-footer__inner">
            <span>&copy; @DateTime.UtcNow.Year · EV Station Rental</span>
            <div class="d-inline-flex gap-3">
                <a asp-page="/Homepage/Home">Trang khách</a>
                <a asp-page="/Feedback/My">Phản hồi</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.5/dist/browser/signalr.min.js"></script>
        <script src="~/js/signalr-notifications.js" asp-append-version="true"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
