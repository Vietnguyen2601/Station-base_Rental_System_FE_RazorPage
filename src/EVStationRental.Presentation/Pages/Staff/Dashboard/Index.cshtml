@page
@model EVStationRental.Presentation.Pages.Staff.Dashboard.IndexModel
@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "~/Pages/Staff/Shared/_StaffLayout.cshtml";
}

<section class="page-card">
    <div class="section-heading">
        <span class="section-heading__eyebrow">Bảng điều khiển</span>
        <div>
            <h2 class="section-heading__title">Dashboard nhân viên</h2>
            <p class="section-heading__subtitle">Chào mừng bạn trở lại. Theo dõi đội xe, trạng thái trạm và đơn hàng realtime.</p>
        </div>
    </div>
    <div class="grid-cards">
        <article class="stat-card">
            <p class="stat-card__label">Đơn hàng hôm nay</p>
            <div class="stat-card__value">0</div>
            <p class="text-muted mb-0 small">Cập nhật mỗi 5 phút</p>
        </article>
        <article class="stat-card">
            <p class="stat-card__label">Xe đang thuê</p>
            <div class="stat-card__value">0</div>
            <p class="text-muted mb-0 small">Bao gồm cả chuyến đang xử lý</p>
        </article>
        <article class="stat-card">
            <p class="stat-card__label">Xe bảo trì</p>
            <div class="stat-card__value">0</div>
            <p class="text-muted mb-0 small">Đang khóa đặt lịch</p>
        </article>
        <article class="stat-card">
            <p class="stat-card__label">Trạm hoạt động</p>
            <div class="stat-card__value">0</div>
            <p class="text-muted mb-0 small">Trạm online trong 24h qua</p>
        </article>
    </div>
</section>

<section class="page-card">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-3">
        <div>
            <h5 class="mb-1">Hoạt động gần đây</h5>
            <p class="text-muted mb-0">Nhật ký xử lý yêu cầu bảo trì, giao xe và cập nhật đơn hàng.</p>
        </div>
        <span class="badge badge-soft">Realtime feed</span>
    </div>
    <div class="text-center py-5 text-muted">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-inbox mb-3"
            viewBox="0 0 16 16">
            <path
                d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438zM3.809 3.563A1.5 1.5 0 0 1 4.98 3h6.04a1.5 1.5 0 0 1 1.17.563l3.7 4.625a.5.5 0 0 1 .12.374l-.4 3.2A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.493-1.238l-.4-3.2a.5.5 0 0 1 .12-.374z" />
        </svg>
        <p class="mb-0">Chưa có hoạt động nào</p>
    </div>
</section>
