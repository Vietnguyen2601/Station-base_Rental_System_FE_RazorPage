@page
@model EVStationRental.Presentation.Pages.Payments.VNPayReturnModel
@{
    ViewData["Title"] = "VNPay Return";
}

<partial name="~/Pages/Shared/_Alerts.cshtml" />

<div class="card shadow-sm">
    <div class="card-body text-center py-5">
        @if (Model.Status == "COMPLETED")
        {
            <div class="display-6 text-success mb-3">Thanh toán thành công</div>
            <p>@Model.Message</p>
        }
        else if (Model.Status == "FAILED")
        {
            <div class="display-6 text-danger mb-3">Thanh toán thất bại</div>
            <p>@Model.Message</p>
        }
        else
        {
            <div class="display-6 text-warning mb-3">Đang xử lý</div>
            <p>Giao dịch đang được xác nhận, vui lòng kiểm tra lại lịch sử ví.</p>
        }
        <a class="btn btn-primary mt-3" asp-page="/Wallet/History">Về lịch sử ví</a>
    </div>
</div>
