@using System.Security.Claims
@using EVStationRental.Common.DTOs.WalletDTOs
@inject EVStationRental.Services.InternalServices.IServices.IWalletServices.IWalletService WalletService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EV Station Rental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVStationRental.Presentation.styles.css" asp-append-version="true" />
</head>
<body>
@{
    var isAuth = User.Identity?.IsAuthenticated ?? false;
    var isAdmin = User.IsInRole("Admin");
    var walletDisplay = "-- ₫";
    var showWalletChip = isAuth && !isAdmin;

    if (showWalletChip)
    {
        var userIdValue = User.FindFirstValue(ClaimTypes.NameIdentifier) ?? User.FindFirstValue("sub");
        if (Guid.TryParse(userIdValue, out var accountId))
        {
            try
            {
                var walletResult = await WalletService.GetWalletBalanceAsync(accountId);
                if (walletResult?.Data is WalletBalanceDTO walletDto)
                {
                    walletDisplay = walletDto.Balance.ToString("n0") + " ₫";
                }
            }
            catch
            {
                walletDisplay = "-- ₫";
            }
        }
    }
}
    <header class="app-header shadow-sm">
        <div class="app-header__inner">
            <a class="brand" asp-page="/Homepage/Home">
                <span class="brand__logo">⚡</span>
                <span class="brand__text">EV Station Rental</span>
            </a>
            <nav class="app-nav">
                <a asp-page="/Homepage/Home">Trang chủ</a>
                @if (!isAdmin)
                {
                    <a asp-page="/Stations/Browse">Thuê xe</a>
                    <a asp-page="/Vehicles/Browse">Xe</a>
                    <a asp-page="/Orders/My">Đơn của tôi</a>
                    <a asp-page="/Wallet/History">Ví của tôi</a>
                    <a asp-page="/Feedback/My">Đánh giá</a>
                }
                @if (isAdmin)
                {
                    <a asp-page="/Admin/Index">Admin</a>
                }
            </nav>
            <div class="auth-actions">
                @if (!isAuth)
                {
                    <a class="btn btn-ghost" asp-page="/Auth/Login">Đăng nhập</a>
                    <a class="btn btn-pill" asp-page="/Auth/Register">Đăng ký</a>
                }
                else
                {
                    @if (showWalletChip)
                    {
                        <div class="wallet-chip" title="Số dư ví của bạn">
                            <span>Ví:</span>
                            <strong data-wallet-balance-header>@walletDisplay</strong>
                        </div>
                    }
                    <form method="post" asp-page="/Auth/Logout">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-pill btn-outline">Đăng xuất</button>
                    </form>
                }
            </div>
        </div>
    </header>

    <div class="app-shell">
        <main class="app-main" role="main">
            <partial name="~/Pages/Shared/_Alerts.cshtml" />
            @RenderBody()
        </main>
    </div>

    <footer class="app-footer">
        <div class="app-footer__inner">
            <span>&copy; @DateTime.UtcNow.Year · EV Station Rental</span>
            <div class="d-inline-flex gap-3">
                <a asp-page="/Homepage/Home">Trang chủ</a>
                <a asp-page="/Feedback/My">Phản hồi</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (isAuth)
    {
        <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.5/dist/browser/signalr.min.js"></script>
        <script src="~/js/signalr-notifications.js" asp-append-version="true"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
