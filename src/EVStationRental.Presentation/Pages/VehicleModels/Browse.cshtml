@page "{stationId:guid}"
@model EVStationRental.Presentation.Pages.VehicleModels.BrowseModel
@{
    ViewData["Title"] = "Chọn mẫu xe";
}

<h2 class="mb-4">Chọn mẫu xe</h2>

<form method="get" class="mb-3">
    <input type="hidden" name="stationId" value="@Model.StationId" />
    <input class="form-control" name="q" value="@Model.q" placeholder="Lọc theo mẫu..." />
</form>

<div class="row">
@foreach (var item in Model.Items)
{
    <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5>@item.ModelName</h5>
                <div class="text-muted">@item.Manufacturer • @item.Specs</div>
                <div class="fw-bold mt-1">@item.PricePerHour.ToString("n0") ₫/giờ</div>
                <div class="small">Có sẵn: @item.AvailableCount</div>
            </div>
            <div class="card-footer bg-transparent">
                <a asp-page="/Orders/CreateFromModel"
                   asp-route-stationId="@Model.StationId"
                   asp-route-modelId="@item.ModelId"
                   class="btn btn-primary btn-sm @(item.AvailableCount <= 0 ? "disabled" : "")">Đặt mẫu này</a>
            </div>
        </div>
    </div>
}
</div>
