@page
@model EVStationRental.Presentation.Pages.Wallet.PayOSReturnModel
@{
    ViewData["Title"] = "Kết quả thanh toán";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0" style="border-radius: 15px; overflow: hidden;">
                <div class="card-body text-center py-5 px-4">
                    @if (Model.Status == "SUCCESS")
                    {
                        <div class="mb-4">
                            <div class="success-icon-wrapper">
                                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                            </div>
                        </div>
                        <h2 class="text-success mb-2 fw-bold">Nạp tiền thành công!</h2>
                        <p class="text-muted mb-4">Giao dịch của bạn đã được xử lý thành công</p>
                        
                        <div class="row g-3 mb-4">
                            @if (Model.Amount.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="p-3 rounded" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                                        <small class="d-block opacity-75">Số tiền đã nạp</small>
                                        <h4 class="mb-0 fw-bold">@Model.Amount.Value.ToString("N0") VNĐ</h4>
                                    </div>
                                </div>
                            }
                            
                            @if (Model.NewBalance.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="p-3 rounded" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                                        <small class="d-block opacity-75">Số dư mới</small>
                                        <h4 class="mb-0 fw-bold">@Model.NewBalance.Value.ToString("N0") VNĐ</h4>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="mt-4">
                            <a href="/Wallet/History" class="btn btn-lg btn-primary px-5 py-3" style="border-radius: 10px;">
                                <i class="bi bi-clock-history me-2"></i>Xem lịch sử giao dịch
                            </a>
                        </div>
                    }
                    else if (Model.Status == "CANCELLED")
                    {
                        <div class="mb-4">
                            <i class="bi bi-x-circle-fill text-warning" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-warning mb-3">Đã hủy giao dịch</h3>
                        <p class="text-muted mb-4">@Model.Message</p>
                        
                        <div class="mt-4">
                            <a href="/Wallet/Topup" class="btn btn-warning me-2">
                                <i class="bi bi-arrow-clockwise"></i> Thử lại
                            </a>
                            <a href="/Wallet/History" class="btn btn-outline-secondary">
                                <i class="bi bi-clock-history"></i> Lịch sử giao dịch
                            </a>
                        </div>
                    }
                    else if (Model.Status == "FAILED")
                    {
                        <div class="mb-4">
                            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-danger mb-3">Giao dịch thất bại</h3>
                        <p class="text-muted mb-4">@Model.Message</p>
                        
                        <div class="mt-4">
                            <a href="/Wallet/Topup" class="btn btn-danger me-2">
                                <i class="bi bi-arrow-clockwise"></i> Thử lại
                            </a>
                            <a href="/Wallet/History" class="btn btn-outline-secondary">
                                <i class="bi bi-clock-history"></i> Lịch sử giao dịch
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="bi bi-question-circle-fill text-secondary" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-secondary mb-3">Lỗi xử lý</h3>
                        <p class="text-muted mb-4">@Model.Message</p>
                        
                        <div class="mt-4">
                            <a href="/Wallet/History" class="btn btn-secondary me-2">
                                <i class="bi bi-clock-history"></i> Xem lịch sử
                            </a>
                            <a href="/Homepage/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-house"></i> Về trang chủ
                            </a>
                        </div>
                    }
                </div>
            </div>
            
            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i> 
                    Nếu có vấn đề, vui lòng liên hệ bộ phận hỗ trợ
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .success-icon-wrapper {
        animation: scaleIn 0.5s ease-out;
    }
    
    @@keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }
    
    .row.g-3 > div > div {
        transition: transform 0.3s ease;
    }
    
    .row.g-3 > div > div:hover {
        transform: translateY(-5px);
    }
</style>
