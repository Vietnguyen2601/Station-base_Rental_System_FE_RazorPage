@page
@model EVStationRental.Presentation.Pages.Orders.MyModel
@using EVStationRental.Common.Enums.EnumModel
@{
    ViewData["Title"] = "Đơn của tôi";
}

<div class="page-card">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <h2 class="mb-0">Đơn của tôi</h2>
        <div class="text-muted">@Model.Orders.Count đơn gần đây</div>
    </div>
    <partial name="~/Pages/Shared/_Alerts.cshtml" />

    <div id="orderList">
        @if (!Model.Orders.Any())
        {
            <div class="flash flash-info">Bạn chưa có đơn nào.</div>
        }
        else
        {
            foreach (var order in Model.Orders)
            {
                <div class="order-row mb-3">
                    <div class="d-flex justify-content-between flex-wrap gap-3">
                        <div>
                            <div class="fw-semibold mb-1">Mã đơn: @order.OrderCode</div>
                            <div class="text-muted small">Từ @order.StartTime:g đến @order.EndTime?.ToString("g")</div>
                            <span class="badge @(order.Status switch {
                                OrderStatus.COMPLETED => "badge-success",
                                OrderStatus.CONFIRMED => "badge-info",
                                OrderStatus.ONGOING => "badge-warning",
                                OrderStatus.CANCELED => "badge-danger",
                                _ => "badge-info"
                            })">@order.Status</span>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold">@order.TotalPrice.ToString("n0") ₫</div>
                            <div class="mt-2 d-flex flex-wrap gap-2 justify-content-end">
                                <a class="btn btn-outline btn-sm" asp-page="/Orders/Details" asp-route-id="@order.OrderId">Chi tiết</a>
                                @if (order.Status == OrderStatus.COMPLETED)
                                {
                                    if (Model.FeedbackOrderIds.Contains(order.OrderId))
                                    {
                                        <span class="badge badge-success align-self-center">Đã đánh giá</span>
                                    }
                                    else
                                    {
                                        <a class="btn btn-success btn-sm" asp-page="/Feedback/Create" asp-route-orderId="@order.OrderId">Đánh giá</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div id="ordersPagination" class="mt-3"></div>
</div>

@section Scripts {
    <script src="~/js/pagination.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            generatePagination('#ordersPagination', '.order-row', 5, 'Trước', 'Sau');
        });
    </script>
}
