@page
@model EVStationRental.Presentation.Pages.Vehicles.BrowseModel
@{
    ViewData["Title"] = "Danh sách xe";
}

<h2 class="mb-4">Xe khả dụng</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-8">
        <input type="text" class="form-control" placeholder="Tìm theo model, hãng hoặc số khung" name="q" value="@Model.q" />
    </div>
    <div class="col-md-4">
        <button class="btn btn-outline-primary w-100" type="submit">Tìm kiếm</button>
    </div>
</form>

@if (!Model.Vehicles.Any())
{
    <div class="alert alert-info">Hiện chưa có xe khả dụng.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var v in Model.Vehicles)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@v.ModelName</h5>
                        <p class="card-subtitle text-muted mb-2">@v.Manufacturer</p>
                        <p class="mb-1"><strong>Số khung:</strong> @v.SerialNumber</p>
                        <p class="mb-1"><strong>Màu:</strong> @v.Color</p>
                        <p class="mb-1"><strong>Specs:</strong> @v.Specs</p>
                        <div class="mt-3 fw-semibold text-primary">@v.PricePerHour.ToString("n0") ₫/giờ</div>
                    </div>
                </div>
            </div>
        }
    </div>
}
